class Solution {
public:
    bool checkValidString(string str) {
        int min=0,max=0;
        int i=0;
        for(i=0;i<str.length();i++)
        {
            if(str[i]=='(')
            {
                min++;
                max++;
            }
            else if(str[i]==')')
            {
                min--;
                max--;
            }
            else
            {
                min--;
                max++;
            }
            if(min<0)
            {
                min=0;
            }
            if(max<0)
            {
                return false;
            }
        }
        if(min<=0&&max>=0)
        {
            return true;
        }
        else
        {
            return false;
        }
    }
};
