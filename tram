#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,i,max=0,temp=0;
    cin>>n;
    int array[n],array1[n];
    
    for(i=0;i<n;i++)
    {
        cin>>array[i];
        cin>>array1[i];
        temp=temp+array1[i]-array[i];
        if(temp>max)
        {
            max=temp;
        }

    }
    cout<<max;
    return 0;

}
