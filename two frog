#include<bits/stdc++.h>
using namespace std;
#define ll long long
int main()
{
   int i;
    int t;
    cin>>t;
    vector<int> answer(t,0);
    for(i=0;i<t;i++)
    {
       int n,a,b;
       cin>>n>>a>>b;
       if((b-a)%2==0)
       {
        answer[i]=1;
       }
    }
    for(i=0;i<t;i++)
    {
       if(answer[i])
       {
        cout<<"YES"<<endl;
       }
       else
       {
        cout<<"NO"<<endl;
       }
    }
    return 0;
}
