#include<iostream>
using namespace std;
int main()
{
    int t,i;
    cin>>t;
    int arr[t];   
    for(i=0;i<t;i++)
    {
        int n;
        cin>>n;
        int array[n],j,pass=1;
        for(j=0;j<n;j++)
        {
            cin>>array[j];
        }
        for(j=0;j<n;j++)
        {
           if((array[j]>2*j)&&(array[j]>2*(n-j-1)))
           {

           }
           else{
            pass=0;

           } 
        }
        arr[i]=pass;
    }
    for(i=0;i<t;i++)
    {
        if(arr[i]==1)
        {
            cout<<"YES"<<endl;
        }
        else{
            cout<<"NO"<<endl;
        }
    }
}
